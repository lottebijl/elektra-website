<a href="{{this.link}}" class="tilter agenda-block">
  <figure class="tilter__figure agenda__bg">
    <div class="tilter__image agenda__image" style="background-image:url('assets/images/{{this.image-big}}')"></div>
    <figcaption class="tilter__caption agenda__inner">
      <p class="agenda__date">
        {{this.weekdayShort}}
        <span>{{this.day}}<br>{{this.month}}</span>
      </p>
      <div class="agenda__content">
        <p class="agenda__title">
          {{this.title}}
        </p>
        <span class="agenda__subtitle">{{this.genre}}</span>
        <span class="agenda__price">{{this.price}}</span>
      </div>
    </figcaption>
  </figure>
</a>